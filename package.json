	},
	"files": [
		"index.js",
		"src/**",
		"**/*.d.ts"
	],
	"scripts": {
		"emitDeclaration": "tsc ./index.js --declaration --emitDeclarationOnly --allowJs --moduleResolution nodenext --module esnext --target esnext --experimentalDecorators"
